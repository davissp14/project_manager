
<%= render layout: 'shared/form', locals: { title: 'Create a new Kanban'} do %>

  <%= simple_form_for @hackpad, url: project_hackpads_path(@project, @hackpad), html: {role: 'form'} do |f| %>
      
      <%= f.input :title, placeholder: "Hackpad Title", maxlength: 50 %>

      <%= form_footer do %>
        <%= link_to "Cancel", 
          project_tasks_path(current_project), 
          class: 'btn btn-default btn-md destroy',
          style: 'font-weight: bold;' %>
        <%= f.submit "Create", class: 'btn btn-active' %>
      <% end %>

  <% end %>
<% end %>