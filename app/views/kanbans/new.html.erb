
<%= render layout: 'shared/form', locals: { title: 'Create a new Kanban'} do %>

  <%= simple_form_for @kanban, url: project_kanbans_path(current_project, @kanban), html: {role: 'form'} do |f| %>
      
    <%= f.input :name, required: true, placeholder: "Task name", maxlength: 50 %>
    <%= f.input :description, placeholder: "Description" %>

    <%= form_footer do %>
      <%= link_to "Cancel", 
        project_kanbans_path(current_project), 
        class: 'btn btn-default btn-md destroy',
        style: 'font-weight: bold;' %>
      <%= f.submit "Create", class: 'btn btn-active' %>
    <% end %>
  <% end %>

<% end %>
