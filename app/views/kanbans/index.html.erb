
<div class='row'>
  <div class='col-md-8'>
    <div class='form-box'>
      <div class='form-box-title'>
        <h5>Project Kanbans</h5>
        <div class='form-box-tools'>
          <%= link_to new_project_kanban_path, class: 'btn btn-active btn-xs' do %>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Kanban
          <% end %>
        </div>
      </div>

      <div class='form-box-content'>
        <% if @kanbans.any? %>
          <ul class='list-group'>
            <%= render @kanbans %>
          </ul>
        <% else %>
           <div class='empty-container'>
            <p>No Kanban found.</p>
            <span>Use the add kanban button above to get started.</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


