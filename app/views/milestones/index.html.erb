<%= sub_nav do %>
  <a href="<%= new_project_milestone_path(@project) %>" class='btn btn-default btn-md pull-right' aria-label="Right Align">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Milestone
  </a>
<% end %>

<div class="sub-header col-md-12">
  <span class="glyphicon glyphicon-tasks" aria-hidden="true"></span>
  <strong><%= pluralize(@milestones.size, "Active Milestone") %></strong>
</div>

<div class="row">
  <div class="col-sm-12 task-col">
    <% if @milestones.any? %>
      <ul class="sortable">
        <%= render @milestones %>
      </ul>
    <% else %>
      <p>No tasks found <%= link_to "Create Milestone", new_project_milestone_path(@project) %></p>
    <% end %>
  </div>
</div>