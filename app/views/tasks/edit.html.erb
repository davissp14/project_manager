<%= simple_form_for @task, url: project_task_path(@task.project, @task), html: {role: 'form'} do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.label :status %>
    <%= f.select :status, Task::AVAILABLE_STATUSES.map{|status| status }, {}, {include_blank: true, class: 'form-control'} %>
    <br />
    <%= f.submit "Update", class: 'btn btn-primary' %>
<% end %>
