<%= content_for(:header_title) { "Task details" } %>

<div class='row'>
  <div class='col-sm-9'>
    <div class='form-box'>
      <div class='form-box-content'>
        <h2> <%= @task.name %> </h2>

        <div class='row'>
         <div class="col-lg-5">
              <dl class='dl-horizontal'>
                <dt> Status: </dt>
                <dd><h4 style='margin: 0;'><span class="label label-active">Active</span></h4></dd>
              </dl>
          </div>
        </div>

        <div class='row' style='padding-bottom: 20px;'>
          <div class="col-lg-5">
            <dl class='dl-horizontal'>
              <dt> Task type: </dt>
              <dd> <%= @task.task_type %> </dd>
              <dt> Created by: </dt>
              <dd> <%= @task.user.slug %></dt>
              <dt> Comments: </dt>
              <dd> <%= @task.comments.size %></dt>
            </dl>
          </div>

          <div class="col-lg-7">
            <dl class='dl-horizontal'>
              <dt> Last updated: </dt>
              <dd> <%= @task.updated_at.strftime('%m/%d/%Y %I:%M%P') %> </dd>
              <dt> Created: </dt>
              <dd> <%= @task.created_at.strftime('%m/%d/%Y %I:%M%P') %> </dt>
              <dt> Contributers: </dt>
              <dd> 
                <%= image_tag current_user.gravatar_url, size: '25x25', style: 'border-radius: 25px;' %>  
              </dd>
            </dl>
          </div>

          <div class="col-lg-7 col-lg-12 " style='width: 100%; padding: 0px 95px;'>
            <dl>
              <dt> Description: </dt>
              <dd> <%= @task.description %> </dd>
            </dl>
          </div>
        </div>

        <h3> Comments </h3>
        <%= react_component('CommentBox', { url: project_task_comments_url(current_project, @task) } ) %>

      </div> 
    </div>
  </div>
</div>
