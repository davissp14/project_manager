
<li data-project-id="<%= task.project.name %>" data-id="<%= task.id %>" class="list-group-item">
    <h4>
      <a href="#" class="comment-icon pull-right">
        <span class="glyphicon glyphicon-comment"></span> <%= task.comments.size %>
      </a>
    </h4>
  <a href="<%= project_task_path(task.project, task) %>">
    <%= task.name %>
  </a>
  <p class="list-group-item-text created_at">
    <%= "Created on #{task.created_at.strftime('%B %d, %Y')}" %>
  </p>
</li>