
<li data-project-id="<%= task.project.name %>" data-id="<%= task.id %>" class="list-group-item">
  <h4>
    <a href="<%= project_task_path(current_project, task) %>" class="comment-icon pull-right">
      <span class="glyphicon glyphicon-comment <%= highlight_icon?(task.comments.size) %>"></span> 
      <span class="<%= highlight_icon?(task.comments.size) %>"> <%= task.comments.size %></span>
    </a>
  </h4>


  <div class='task-label'>
      <% if task.task_type == 'Feature' %>
      <span class='glyphicon glyphicon-star'></span>
      <% elsif task.task_type == 'Chore' %>
        <span class='glyphicon glyphicon-cog'></span>
      <% else %>
        <i class="fa fa-bug"></i>
      <% end %>
  </div>

  <div style="display: inline-block; width: 90%; padding-left: 5px;">
    <a href="<%= project_task_path(task.project, task) %>">
      <%= task.name %>
    </a>

    <p class="list-group-item-text created_at" style='display: inline;'>
      - <%= truncate(task.description, length: 50) %>
        <% if task.priority.present? %>
          <span class="label label-<%= task_priority_status(task) %>" style=""><%= task.priority %> priority</span>
        <% end %>
    </p>

    <% if task.owner %>
      <%= image_tag current_user.gravatar_url, size: '25x25', style: 'vertical-align: top; float: right;' %>
    <% end %>
  </div>
</li>