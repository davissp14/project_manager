<div class='comment-wrapper'>
    <div class='comment-user-image'>
        <%= image_tag(comment.user.gravatar_url, size: '45x45') %>
    </div>
    <div class='comment-container'>
        <div class="sub-header">
            <strong><%= comment.user.slug %></strong>
            <span class='created_at'><%= "commented #{time_ago_in_words(comment.created_at)} ago" %></span>

            <% if comment_owner?(comment) %>
                <a href="<%= edit_project_task_comment_path(current_project, comment.task, comment) %>">
                    <span class='edit-icon pull-right glyphicon glyphicon-pencil'></span>
                </a>
            <% end %>
        </div>
        <div class="description text">
            <%= comment.text %>
        </div>
    </div>
</div>