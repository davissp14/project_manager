<%= sub_nav do %>
  <a href="<%= new_project_task_path(current_project) %>" class='btn btn-default btn-md pull-right' aria-label="Right Align">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Task
  </a>
<% end %>

<div class="sub-header col-md-12">
  <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
  <strong><span><%= pluralize(@tasks.size, "Open Tasks") %></span></strong>
</div>

<div class="row">
  <div class="col-md-12 task-col">
    <% if @tasks.any? %>
      <ul class="sortable">
        <%= render @tasks %>
      </ul>
    <% else %>
       <div class='empty-container'>
        <p>No tasks found.</p>
        <span>Use the add task button above to create your tasks.</span>
      </div>
    <% end %>
  </div>
</div>
