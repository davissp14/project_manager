<div class='row'>
  <div class='col-md-8'>
    <div class='form-box'>
      <div class='form-box-title'>
        <h5>Active Tasks</h5>
        <div class='form-box-tools'>
          <%= link_to new_project_task_path(current_project), class: 'btn btn-active btn-xs' do %>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Task
          <% end %>
        </div>
      </div>

      <div class='form-box-content'>
        <% if @tasks.any? %>
          <ul class='sortable list-group'>
            <%= render @tasks %>
          </ul>
        <% else %>
           <div class='empty-container'>
            <p>No active tasks found.</p>
            <span>Use the add task button above to get started.</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
