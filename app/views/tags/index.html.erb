<h2>Tags</h2>

<div class="row">
  <div class="col-md-6">
    <ul class="list-group">
      <% @tags.each do |tag| %>
        <a href="#" class="list-group-item">
          <h4>
            <span class="label label-default pull-right" style="background-color: #<%= tag.color_hex %>">
              <%= tag.name %>
            </span>
          </h4>
          <h4 class="list-group-item-heading"><%= tag.name %></h4>
        </a>
      <% end %>
    </ul>
  </div>
</div>
