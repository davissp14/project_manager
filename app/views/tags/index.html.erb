<%= sub_nav do %>
  <a href="<%= new_project_tag_path(@project) %>" class='btn btn-default btn-md pull-right' aria-label="Right Align">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Tag
  </a>
<% end %>

<div class="sub-header col-md-12">
  <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
  <strong><span><%= pluralize(@tags.size, "Tags") %></span></strong>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @tags.any? %>
      <ul class="sortable">
        <%= render @tags %>
      </ul>
    <% else %>
      <p>No tasks found <%= link_to "Create Tag", new_project_tag_path(@project) %></p>
    <% end %>
  </div>
</div>
