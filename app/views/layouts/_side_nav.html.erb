<div id="sidebar-wrapper"> 
  <ul class="sidebar-nav">
    <li class='profile'>
      <span>
        <%= image_tag current_user.gravatar_url, size: '50x50', style: 'border-radius: 25px;' %>
      </span>
      <div><%= link_to current_user.name, '#' %></div>
    </li>

    <% unless params[:controller] == 'projects' %>
      <li class='side-nav'>
        <%= link_to project_feeds_path(current_project) do %>
          <span class='icon'><i class="fa fa-newspaper-o"></i></span>
          Feeds
        <% end %>
      </li>
      <li class='side-nav'>
        <%= link_to project_hackpads_path(current_project) do %>
          <span class='icon'><i class="fa fa-paper-plane"></i></span>
          Hackpads
        <% end %>
      </li>
      <li class='side-nav'>
        <%= link_to project_sprints_path(current_project) do %>
          <span class='icon'><i class="fa fa-bolt"></i></span> 
          Sprints
        <% end %>
      </li>
      <li class='side-nav'>
        <%= link_to project_tasks_path(current_project) do %>
          <span class='icon'><i class="fa fa-tasks"></i></span>
           Tasks
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
