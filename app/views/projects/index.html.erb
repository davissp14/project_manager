
<div class='row'>
  <div class='col-md-8'>
    <div class='form-box'>
      <div class='form-box-title'>
        <h5>All Projects associated with this account.</h5>
        <div class='form-box-tools'>
          <%= link_to new_project_path, class: 'btn btn-active btn-xs' do %>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Project
          <% end %>
        </div>
      </div>

      <div class='form-box-content'>
        <% if @projects.any? %>
          <ul class='sortable list-group'>
            <%= render @projects %>
          </ul>
        <% else %>
           <div class='empty-container'>
            <p>No Projects found.</p>
            <span>Use the add project button above to get started.</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
